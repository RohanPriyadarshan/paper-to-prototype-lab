# Environment Variables Template
# CropHealth AI
# Authors: Rohan Priyadarshan & Saket Kumawat

# ===========================================
# APPLICATION
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-this-to-a-secure-random-string
APP_VERSION=1.0.0

# ===========================================
# DATABASE
# ===========================================
DATABASE_URL=postgresql://crophealth:password@localhost:5432/crophealth
DATABASE_POOL_SIZE=10
DATABASE_ECHO=false

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ===========================================
# ML MODELS
# ===========================================
MODEL_PATH=./ml/models/saved
TFLITE_PATH=./ml/models/tflite
ENSEMBLE_WEIGHTS=0.30,0.35,0.15,0.20
USE_GPU=true

# ===========================================
# STORAGE (S3/MinIO)
# ===========================================
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=crophealth-images
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-east-1

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RATE_LIMIT=100
API_TIMEOUT=30
CORS_ORIGINS=http://localhost:3000,https://crophealth.ai

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=change-this-jwt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# FRONTEND
# ===========================================
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=CropHealth AI

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/crophealth.log

# ===========================================
# MONITORING (Optional)
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=
